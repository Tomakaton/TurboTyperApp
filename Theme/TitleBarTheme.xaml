<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 1) Base Button Style: no more built-in chrome -->
    <Style x:Key="BaseButtonStyle" TargetType="Button">
        <!-- Tell WPF to ignore the stock Button template -->
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <!-- Layout: a single Border + ContentPresenter -->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="0">
                        <ContentPresenter 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <!-- Default appearance -->
        <Setter Property="Background" Value="#292b2e"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <!-- 2) TitleBarButton: inherits Base, overrides hover -->
    <Style x:Key="TitleBarButton"
           TargetType="Button"
           BasedOn="{StaticResource BaseButtonStyle}">
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#383b40"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- 3) CloseButton: inherits Base, different hover -->
    <Style x:Key="CloseButton"
           TargetType="Button"
           BasedOn="{StaticResource BaseButtonStyle}">
    
        <!-- Set custom template with CornerRadius support -->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="0,10,0,0">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <!-- Default background -->
        <Setter Property="Background" Value="#292b2e"/>

        <!-- Hover background -->
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="Red"/>
            </Trigger>
        </Style.Triggers>
    </Style>



</ResourceDictionary>