<UserControl x:Class="TurboTyper.MVVM.View.UserControls.GameContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TurboTyper.MVVM.View.UserControls"
             xmlns:viewModel="clr-namespace:TurboTyper.MVVM.ViewModel"
             mc:Ignorable="d"
             d:DesignHeight="620" d:DesignWidth="1920"
             PreviewTextInput="OnPreviewTextInput"
             Focusable="True"
             Loaded="GameContainer_Loaded">
    <UserControl.DataContext>
        <viewModel:GameSessionViewModel />
    </UserControl.DataContext>
    
    <Grid Margin="40 50">
        <Grid.DataContext>
            <Binding Path="Game" />
        </Grid.DataContext>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        
        <!-- display timer -->
        <TextBlock Grid.Row="0" Text="{Binding Elapsed, StringFormat={}{0:mm\\:ss\\.ff}}" />

        <!-- display lines -->
        <ItemsControl Grid.Row="1" ItemsSource="{Binding GameText}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <!-- display words -->
                    <ItemsControl ItemsSource="{Binding Text}" Margin="0 10">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <!-- display letters -->
                                <ItemsControl ItemsSource="{Binding Word}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                        
                                            <TextBlock Text="{Binding Letter}" Style="{StaticResource CharStyle}"/>
                        
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
